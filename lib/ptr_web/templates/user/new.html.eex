<section class="section is-primary">
  <div class="container">
    <div class="columns">
      <div class="column is-half is-offset-one-quarter">
        <div class="card">
          <header class="card-header">
            <h2 class="card-header-title">
              <%= dgettext("users", "New user") %>
            </h2>
          </header>

          <%= render "_form.html", Map.put(assigns, :action, Routes.user_path(@conn, :create)) %>
        </div>
      </div>
    </div>
  </div>
</section>

<footer class="footer is-primary">
  <div class="container">
    <p>
      <span><%= link dgettext("users", "Back"), to: Routes.user_path(@conn, :index) %></span>
    </p>
  </div>
</footer>
