<section class="section is-primary">
  <div class="container">
    <div class="card">
      <header class="card-header">
        <h2 class="card-header-title">
          <%= dgettext("varieties", "Variety") %>
        </h2>
      </header>

      <div class="card-content">
        <h2 class="title"><%= @variety.name %></h2>

        <ul>
          <li>
            <strong><%= dgettext("varieties", "Identifier") %></strong>:
            <%= @variety.identifier %>
          </li>
          <li>
            <strong><%= dgettext("varieties", "Clone") %></strong>:
            <%= @variety.clone %>
          </li>
        </ul>
      </div>

      <footer class="card-footer">
        <%= link dgettext("varieties", "Edit"), to: Routes.variety_path(@conn, :edit, @variety), class: "card-footer-item" %>
      </footer>
    </div>
  </div>
</section>

<footer class="footer is-primary">
  <div class="container">
    <p>
      <span><%= link dgettext("varieties", "Back"), to: Routes.variety_path(@conn, :index) %></span>
    </p>
  </div>
</footer>
